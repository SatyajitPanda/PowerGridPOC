<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.djayin.powergridpoc">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PowerGridPOC">
        <activity
            android:name=".views.activities.FormActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activities.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <service
            android:name=".Services.FetchAddressIntentService"
            android:exported="false" />

        <activity android:name=".views.activities.Custommap" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBUIv5pW26QPN7ZHqGRhtsng8Xb8zUHt80" />
    </application>

</manifest>